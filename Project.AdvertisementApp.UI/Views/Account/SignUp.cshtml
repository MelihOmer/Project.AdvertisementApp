@model UserCreateVM
<div class="dummy mt-xxl-5 row "></div>
<div class="dummy mt-xxl-5 row "></div>

<div class="mt-4 container">
    <form asp-action="SignUp" asp-controller="Account" method="post" class="p-4 w-75 mx-auto">
        
        <div class="mb-3">
            <label>Adınız :</label>
            <input asp-for="@Model.FirstName" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Soy Adınız :</label>
            <input asp-for="@Model.SurName" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Kullanıcı Adınız :</label>
            <input asp-for="@Model.UserName"  class="form-control" />
        </div>
        <div class="mb-3">
            <label>Telefon Numaranız :</label>
            <input asp-for="@Model.PhoneNumber" class="form-control" />
        </div>
        <div class="mb-3">
            <select class="form-select" asp-items="@Model.Genders" asp-for="@Model.GenderId">
                <option value="0">Cinsiyet Seçiniz</option>
            </select>
        </div>
        <div class="mb-3">
            <label>Şifreniz :</label>
            <input asp-for="@Model.Password" type="password" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Şifre Tekrar :</label>
            <input asp-for="@Model.ConfirmPassword" type="password" class="form-control" />
        </div>
        <div class="mb-3 text-end">
            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
        </div>

        <div class="text-danger lead" asp-validation-summary="All"></div>


    </form>
</div>