@model List<AdvertisementListDto>


<div class="dummy mt-xxl-5 row "></div>
<div class="dummy mt-xxl-5 row "></div>

<div class="container">
    @{
        if (Model?.Count > 0)
        {
            <div class="text-end my-3 p-1">
                <a class="btn btn-success" asp-action="Create" asp-controller="Application">Yeni İlan Oluştur</a> 
            </div>
            <table class="mt-3 table table-sm table-hover table-striped">
                <thead>
                    <tr>
                        <th class="">İlan Başlığı</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>İlan Durumu</th>
                        <th>Aksiyon</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                            <td>@(item.Status?"Aktif":"Pasif")</td>
                            <td>
                                <a asp-action="Update" asp-controller="Application" asp-route-id="@item.Id" >Güncelle</a> |
                                <a asp-action="Remove" asp-controller="Application" asp-route-id="@item.Id">Sil</a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-end my-3 p-1">
                <a class="btn btn-success" asp-action="Create" asp-controller="Application">Yeni İlan Oluştur</a>
            </div>
            <div class="mt-3 text-center lead">
                Herhangi Bir İlan Bulunamamıştır.
            </div>
        }
    }
</div>
